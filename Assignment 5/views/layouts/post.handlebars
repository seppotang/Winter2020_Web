<!--Header param gets changed depending if its a get or post request -->
<h1>POST Request Received</h1>

<!-- GET or POST handling table -->
<table>
	<tr>
		<th>Parameter header</th>
		<th>Data content</th>
	</tr>
	{{#each dataList}}
		<tr>
			<td>{{this.name}}</td>
			<td>{{this.value}}</td>
		</tr>
	{{/each}}
</table>

<!-- POST Handling table -->
<table>
	<tr>
		<th>Parameter header</th>
		<th>Data content</th>
	</tr>
	<!-- How to differentiate between GET & POST datum? -->
	{{#each dataList}}
		<tr>
			<td>{{this.name}}</td>
			<td>{{this.value}}</td>
		</tr>
	{{/each}}
</table>